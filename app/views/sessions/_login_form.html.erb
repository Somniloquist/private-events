<%= form_with scope: :session, url: login_path, local: true do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-primary form-control" %>
  </div>

<% end %>