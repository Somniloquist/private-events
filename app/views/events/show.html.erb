<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @event.title %></h1>
      <h6 class="event-details">Created by <%= @event.creator.name %></h6>
      <h6 class="event-details"><%=@event.date.strftime("%A %B %d, %Y")%> at <%= @event.location %></h6>
      <p class="event-description"><%= @event.description%></p>
    </div>
    <div class="col-md">
      <%= link_to "Invite Friends", new_invitation_path(params: { event_id: @event.id }), class: "btn btn-primary" %>
      <h2> Attendees </h2>
      <ul>
        <% @attendees.each do |attendee| %>
          <li><%= link_to attendee.name, user_path(attendee) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>