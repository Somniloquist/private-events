<div class="container col-md-6">
  <h1>Create an invitation</h1>
  <%= form_with scope: :invitation, url: invitations_path, local: true do |f| %>
    <%= hidden_field_tag "event[event_id]", params[:event_id] %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Send Invitation", class: "form-control btn btn-primary" %>
    </div>
  <% end %>
</div>